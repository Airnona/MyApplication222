<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/habitLayoutToggle"
        style="@style/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/star_toggle_bg"
        android:checked="false"

        android:text="ToggleButton" />

    <EditText
        android:id="@+id/habitLayoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="testttt"
        android:layout_alignBottom="@+id/habitLayoutToggle"
        android:layout_toRightOf="@+id/habitLayoutToggle"
        android:layout_toEndOf="@+id/habitLayoutToggle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/habitLayoutEditButton"
        android:layout_alignBottom="@+id/habitLayoutToggle"
        android:layout_alignTop="@+id/habitLayoutToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/habitLayoutText"
        android:layout_toRightOf="@+id/habitLayoutText"
        android:text="Edit" />

